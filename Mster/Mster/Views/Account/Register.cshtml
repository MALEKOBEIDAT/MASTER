    <div class="inner_page login">
        <div class="full_container">
            <div class="container" >
                <div class="center verticle_center full_height">
                    <div class="login_section">
                        <div class="logo_login">
                            <div class="center">

                                <a href="/Home/Index">
                                    <h1 style="color:rgb(255, 255, 255)  ;">Buyutna</h1>
                                </a>
                                <!--
                                                           <img width="210" src="images/logo/logo.png" alt="#" />

                                -->

                            </div>
                        </div>
                        <div class="login_form">

                            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                <h4>Create a new account.</h4>
                                <hr />
                                @Html.ValidationSummary("", new { @class = "text-danger" })
                                <div class="field">
                                    <label class="label_field">First Name</label>
                                    <input type="text" name="firstName" placeholder="First-Name" />
                                </div>

                                <div class="field">
                                    <label class="label_field">Last Name</label>
                                    <input type="text" name="lastName" placeholder="Last-Name" />
                                </div>
                                <div class="field">
                                    @Html.LabelFor(m => m.Email, new { @class = "label_field" })
                                    @Html.TextBoxFor(m => m.Email)
                                </div>


                                <div class="field">
                                    <label class="label_field">Phone Number</label>
                                    <input type="tel" name="Phone" placeholder="Phone-Number" />
                                </div>


                                <div class="field">
                                    @Html.LabelFor(m => m.Password, new { @class = "label_field" })
                                    @Html.PasswordFor(m => m.Password)
                                </div>
                                <div class="field">
                                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label_field" })




                                    @Html.PasswordFor(m => m.ConfirmPassword)


                                </div>
                                <div class="field margin_0">
                                    <input type="submit" class="main_bt" value="Register" />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- jQuery -->
        <script src="~/Admin-style/js/jquery.min.js"></script>
        <script src="~/Admin-style/js/popper.min.js"></script>
        <script src="~/Admin-style/js/bootstrap.min.js"></script>
        <!-- wow animation -->
        <script src="~/Admin-style/js/animate.js"></script>
        <!-- select country -->
        <script src="~/Admin-style/js/bootstrap-select.js"></script>
        <!-- nice scrollbar -->
        <script src="~/Admin-style/js/perfect-scrollbar.min.js"></script>
        <script>
            var ps = new PerfectScrollbar('#sidebar');
        </script>
        <!-- custom js -->
        <script src="~/Admin-style/js/custom.js"></script>
    </div>

